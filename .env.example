# Carrier Sales AI - Environment Configuration
# Copy this file to .env and update values

# ======================
# API Security
# ======================
API_KEY=secure-api-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here

# ======================
# FMCSA API Configuration
# ======================
# Get your FMCSA API key from: https://mobile.fmcsa.dot.gov/QCDevsite/
FMCSA_API_KEY=your-fmcsa-webkey-here

# ======================
# Application Settings
# ======================
ENVIRONMENT=development  # development, staging, production
DEBUG=true  # true for development, false for production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ======================
# Database Configuration
# ======================
DATABASE_URL=sqlite:///./data/carrier_sales.db
# For PostgreSQL: postgresql://user:password@localhost/carrierdb
# For MySQL: mysql://user:password@localhost/carrierdb

# ======================
# Cache and Session
# ======================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=defaultpassword

# ======================
# External URLs
# ======================
API_BASE_URL=http://localhost:8000
DASHBOARD_URL=http://localhost:3000
HAPPYROBOT_WEBHOOK_URL=http://localhost:8000

# ======================
# SSL/Security (Production)
# ======================
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ======================
# Monitoring (Optional)
# ======================
GRAFANA_PASSWORD=admin123
PROMETHEUS_ENABLED=false

# ======================
# Email/Notifications (Future)
# ======================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# ======================
# Cloud Provider Settings
# ======================
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Railway (if deploying to Railway)
RAILWAY_ENVIRONMENT=production

# ======================
# Feature Flags
# ======================
ENABLE_RATE_LIMITING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_CALL_RECORDING=false
ENABLE_ADVANCED_ANALYTICS=true